version 35
__lua__
function _init()
	p={x=60, y=90, speed=1}
	bullets={}
end


function _update60()
	if (btn(➡️)) p.x+=p.speed
	if (btn(⬅️)) p.x-=p.speed
	if (btn(⬆️)) p.y-=p.speed
	if (btn(⬇️)) p.y+=p.speed
	if (btnp(❎)) shoot()
	
	update_bullets()
	
end


function _draw()
	cls()
	--vaisseau
	spr(1, p.x, p.y)
	--bullets
	draw_bullets()
	
	
end
-->8
--bullets

function shoot()
	new_bullet={
	x=p.x,
	y=p.y-8,
	speed=4
	}
	add(bullets, new_bullet)
	sfx(0)
end

function update_bullets()
	for b in all(bullets) do
		b.y-=b.speed
	end
end


function draw_bullets()
	for b in all(bullets) do
		spr(3,b.x, b.y)
	end
end
